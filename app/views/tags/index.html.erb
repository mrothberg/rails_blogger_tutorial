<h1>List of Tags</h1>

<ul id="tags">
    <% @tags.each do |tag| %>
        <%= link_to tag, tag_path(tag) %>
        <% if logged_in? %>
            <%= link_to "Delete", tag_path(tag), method: :delete, data: {confirm: "Really delete this tag?"} %>
        <% end %>
        <br/>
    <% end %>
</ul>

<br/>
<%= link_to "<< Back to Articles", articles_path %>